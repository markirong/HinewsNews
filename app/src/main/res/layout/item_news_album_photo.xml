<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/title"
        android:textSize="17sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"/>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="184dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="194dp">

            <ImageView
                android:id="@+id/iv_multi"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_motherland"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="#33000000"/>

            <TextView
                android:id="@+id/tv_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="0图"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stick"
            android:textColor="@color/mews_type_top"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="澎湃新闻"
            android:textColor="@color/news_resource"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="13小时前"
            android:textColor="@color/text_grey"/>

        <TextView
            android:id="@+id/tv_read"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="200万阅"
            android:textColor="@color/text_grey"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_small_delete"/>

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_view"/>

</LinearLayout>